<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_input_horizontal"
    android:paddingRight="@dimen/margin_input_horizontal">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_accept"
        android:text="@string/accept_request_friend"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_decline_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_decline"
        android:text="@string/decline_request_friend"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_below="@id/btn_accept"
        android:layout_marginTop="@dimen/margin_top"/>

</RelativeLayout>